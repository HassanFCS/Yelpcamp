<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3" style="word-break: break-all;">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading"><%=err.message%></h4>
            <div class="container">
                <% if(process.env.NODE_ENV !== "production"){ %>
                    <p><%= err.stack %></p>
                <% } %>
            </div>
        </div>
    </div>
</div>
